
@{
    ViewData["Title"] = "MiApp/Perfiles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

 @ViewBag.PerfilPaginas
<table id="tblPerfiles" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>Id</th>
            <th>Perfil</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>
<div class="modal fade" id="perfilModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header danger">
                <h5 class="modal-title" id="exampleModalLabel">Datos de perfiles</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form action="" id="frmPerfiles" method="POST" name="frmPerfiles" class="form-horizontal">
                    <div class="group col-5">
                        <label>Perfil</label>
                        <input type="hidden" id="id">
                        <input type="text" class="form-control" id="perfil" name="perfil" placeholder="Perfil">
                        <label for="perfil" class="validation_error_message help-block"></label>
                    </div>
                    <div id="divPaginas">
                        <partial name="~/Views/Perfiles/_PartialTblPaginas.cshtml" />
                    </div>
                    <hr>
                    <input type="submit" id="btnGuardar" value="Guardar" class="btn btn-success">
                </form>
            </div>
        </div>
    </div>
</div>
<div id="GetPerfiles" data-request-url="@Url.Action("GetPerfiles", "Perfiles")"></div>
<div id="AgregarPerfil" data-request-url="@Url.Action("AgregarPerfil", "Perfiles")"></div>
<div id="ModificarPerfil" data-request-url="@Url.Action("ModificarPerfil", "Perfiles")"></div>
<div id="GetPerfilPaginas" data-request-url="@Url.Action("GetPerfilPaginas", "Perfiles")"></div>
@section Scripts {
    <script>
        APP.perfiles.init();
    </script>
}

