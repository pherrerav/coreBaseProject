
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table id="tblLogs" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>Archivo</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>
<!-- Modal -->
<div id="modalLog" class="modal fade" role="dialog">
    <div class="modal-dialog modal-lg">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="logFileTitle"></h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <iframe id="logsIframe" src="" width="100%" height="385px"></iframe>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

<div id="GetLogsFiles" data-request-url="@Url.Action("GetLogsFiles", "Logs")"></div>
<div id="logsFile" data-request-url="@Url.Content("~/Logs/")"></div>
@section Scripts {
    <script>
        APP.logs.init();
    </script>
}