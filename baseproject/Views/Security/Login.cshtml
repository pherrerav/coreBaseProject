@{
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="shortcut icon" href="~/images/bacIcon.ico">
    <title>Mi App/Login</title>
    <link rel="stylesheet" href="~/dist/security.css" />
</head>
<body>
    <br>
    <form method="post" role="form" id="frmLogin" name="frmLogin">
        <div class="login-wrap">
            <div class="login-html">
                <input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1" class="tab">Mi App</label>
                <input id="tab-2" type="radio" name="tab" class="sign-up"><label for="tab-2" class="tab"></label>
                <div class="login-form">
                    <div class="sign-in-htm">
                        <div class="group">
                            <label for="usuario" class="label">Usuario</label>
                            <input id="usuario" name="usuario" type="text" class="input">
                            <label for="usuario" class="validation_error_message help-block"></label>
                        </div>
                        <div class="group">
                            <label for="clave" class="label">Clave</label>
                            <input id="clave" name="clave" type="password" class="input" data-type="password">
                            <label for="clave" class="validation_error_message help-block"></label>
                        </div>
                        <br>
                        <div class="group">
                            <input type="submit" class="button" value="Ingresar">
                        </div>
                        <div class="hr"></div>
                        <div align="center">
                            <img src="~/images/baclogo.png" id="miImagen">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
    <div id="login" data-request-url="@Url.Action("CheckLogin", "Security")"></div>
    <div id="dashboard" data-request-url="@Url.Action("index", "Usuarios", new { id = 5 })"></div>
    <script>
        let APP = window.APP || {}
    </script>

    <script src="~/dist/security.js" asp-append-version="true"></script>
</body>
</html>
